default_platform(:ios)

platform :ios do
  desc "Build release IPA"
  lane :build do
    build_app(
      project: "App.xcodeproj",
      scheme: "App",
      clean: true,
      export_method: "app-store",
      xcargs: "DEVELOPMENT_TEAM=YG929B6RG3 CODE_SIGN_STYLE=Manual PROVISIONING_PROFILE_SPECIFIER='Stuga App Store'",
      export_options: {
        signingStyle: "manual",
        teamID: "YG929B6RG3",
        signingCertificate: "Apple Distribution",
        provisioningProfiles: {
          "com.twinbolt.stuga" => "Stuga App Store"
        }
      },
      output_directory: "./build",
      output_name: "Stuga.ipa"
    )
  end

  desc "Upload dSYMs to Firebase Crashlytics"
  lane :upload_dsyms do
    download_dsyms(
      app_identifier: "com.twinbolt.stuga"
    )
    upload_symbols_to_crashlytics(
      gsp_path: "../App/GoogleService-Info.plist"
    )
    clean_build_artifacts
  end

  desc "Upload to TestFlight"
  lane :beta do
    build
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Deploy to App Store"
  lane :release do
    build
    upload_to_app_store(
      skip_screenshots: true,
      skip_metadata: false,
      force: true
    )
  end

  desc "Upload pre-built IPA to App Store"
  lane :upload do
    upload_to_app_store(
      ipa: "./build/Stuga.ipa",
      skip_screenshots: true,
      skip_metadata: false,
      force: true
    )
  end

  desc "Upload metadata only (no build)"
  lane :metadata do
    upload_to_app_store(
      skip_binary_upload: true,
      skip_screenshots: true,
      force: true
    )
  end
end
